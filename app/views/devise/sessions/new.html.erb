<div class="flex-container">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true, label: false, placeholder: 'Enter your email', html: { autocomplete: 'off', id: 'input-user-email' } %>
      <%= f.input :password, required: false, label: false, placeholder: 'Password', html: {id: 'input-user-pass'} %>
    </div>
    <div class="flex-item pull-right">
      <div class="form-actions">
        <span id="user_done_notif">press 'Enter' when done</span>
      </div>
    </div>
    <%= f.submit 'submit',class: 'hidden-button' %>
  <% end %>
</div>
